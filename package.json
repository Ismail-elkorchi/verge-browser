{
  "name": "verge-browser",
  "version": "0.1.0",
  "private": true,
  "description": "Deterministic terminal web browser powered by html-parser.",
  "type": "module",
  "packageManager": "npm@11.10.0",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "bin": {
    "verge": "./dist/cli.js"
  },
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "build": "tsc -p tsconfig.build.json",
    "test": "npm run build && node --test test/control/**/*.test.js",
    "start": "node dist/cli.js",
    "check": "npm run lint && npm run typecheck && npm test"
  },
  "dependencies": {
    "html-parser": "file:../html-parser"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "25.2.3",
    "eslint": "9.39.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  }
}
